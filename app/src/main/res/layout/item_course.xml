<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_course_list"
        android:orientation="horizontal" >

        <!-- 图片 -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/im_pic"
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/icon_default_course" />

            <TextView
                android:layout_width="84dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:text="1600人听过"
                android:textColor="#737274" />
        </LinearLayout>

        <!-- 文字 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="课程名称"
                android:textColor="#00A4E9"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="20dp"
                android:background="#CFCFD0" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:text="授课方式:闲客上门"
                android:textColor="#737273"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="75课时"
                    android:textColor="#737273"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="课程总价:"
                        android:textColor="#737273"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥"
                        android:textColor="#000"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="14000"
                        android:textColor="#00A1E9"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="闲客等级:"
                    android:textColor="#000"
                    android:layout_gravity="center_vertical"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_start1"
                   android:layout_width="12dp"
                    android:layout_height="10dp"
                    android:layout_margin="1dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/icon_red_heart" />

                <TextView
                    android:id="@+id/tv_start2"
                     android:layout_width="12dp"
                    android:layout_height="10dp"
                    android:layout_margin="1dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/icon_red_heart" />

                <TextView
                    android:id="@+id/tv_start3"
                    android:layout_width="12dp"
                    android:layout_height="10dp"
                    android:layout_margin="1dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/icon_red_heart" />

                <TextView
                    android:id="@+id/tv_start4"
                     android:layout_width="12dp"
                    android:layout_height="10dp"
                    android:layout_margin="1dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/icon_red_heart" />

                <TextView
                    android:id="@+id/tv_start5"
                     android:layout_width="12dp"
                    android:layout_height="10dp"
                    android:layout_margin="1dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/icon_red_heart" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="守约率：100%"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:layout_gravity="center_vertical"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>